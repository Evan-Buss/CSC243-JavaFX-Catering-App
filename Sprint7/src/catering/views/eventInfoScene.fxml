<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXRadioButton?>
<GridPane prefHeight="400.0" prefWidth="600.0"
          stylesheets="/catering/views/style.css"
          xmlns="http://javafx.com/javafx/8.0.141"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="catering.controllers.EventInfoController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="310.0" minWidth="10.0"
                           prefWidth="240.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="393.0" minWidth="10.0"
                           prefWidth="360.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <JFXDatePicker defaultColor="#455a64" fx:id='datePicker' promptText="Select a Date"
                   GridPane.columnIndex="1" GridPane.rowIndex="1">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <GridPane.margin>
            <Insets left="30.0"/>
        </GridPane.margin>
    </JFXDatePicker>
    <Label id="pageLabel" alignment="CENTER" text="Event Information" underline="true"
           GridPane.columnSpan="2" GridPane.halignment="CENTER"
           GridPane.valignment="CENTER">
        <font>
            <Font name="Roboto Regular" size="36.0"/>
        </font>
    </Label>
    <Label text="Event Date: " textAlignment="CENTER"
           GridPane.halignment="RIGHT" GridPane.rowIndex="1"
           GridPane.valignment="CENTER">
        <font>
            <Font name="Roboto Regular" size="18.0"/>
        </font>
    </Label>
    <Label text="Event Type: " textAlignment="CENTER"
           GridPane.halignment="RIGHT" GridPane.rowIndex="2"
           GridPane.valignment="TOP">
        <font>
            <Font name="Roboto Regular" size="18.0"/>
        </font>
    </Label>
    <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0"
          GridPane.columnIndex="1" GridPane.halignment="CENTER"
          GridPane.rowIndex="2" GridPane.valignment="CENTER">
        <JFXRadioButton fx:id="weddingRB" mnemonicParsing="false" text="Wedding"
                        userData="1">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font name="Roboto Regular" size="14.0"/>
            </font>
        </JFXRadioButton>
        <JFXRadioButton fx:id="birthdayRB" mnemonicParsing="false" text="Birthday"
                     userData="2">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font name="Roboto Regular" size="14.0"/>
            </font>
        </JFXRadioButton>
        <JFXRadioButton fx:id="corporateRB" mnemonicParsing="false"
                     text="Corporate" userData="3">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font name="Roboto Regular" size="14.0"/>
            </font>
        </JFXRadioButton>
    </VBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
          GridPane.columnSpan="2" GridPane.halignment="CENTER"
          GridPane.rowIndex="3" GridPane.valignment="CENTER">
        <JFXButton buttonType="RAISED" ripplerFill="#63ccff" fx:id="backButton"
                   alignment="CENTER" mnemonicParsing="false"
                   onAction="#handleBackButton" prefHeight="40.0"
                   prefWidth="120.0" text="Back">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </HBox.margin>
        </JFXButton>
        <JFXButton buttonType="RAISED" ripplerFill="#63ccff" fx:id="nextButton" alignment="CENTER" defaultButton="true"
                layoutX="250.0" layoutY="40.0" mnemonicParsing="false"
                onAction="#handleNextButton" prefHeight="40.0" prefWidth="120.0"
                text="Next">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </HBox.margin>
        </JFXButton>
    </HBox>
</GridPane>
