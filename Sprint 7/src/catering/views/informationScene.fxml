<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
          stylesheets="/catering/views/style.css"
          xmlns="http://javafx.com/javafx/8.0.141"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="catering.controllers.InformationController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="16.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="291.0" minHeight="138.0" percentHeight="64.0"
                        prefHeight="291.0" vgrow="SOMETIMES"/>
        <RowConstraints/>
    </rowConstraints>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
          GridPane.columnSpan="2" GridPane.halignment="CENTER"
          GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <children>
            <ImageView fitHeight="180.0" fitWidth="300.0" pickOnBounds="true"
                       preserveRatio="true">
                <image>
                    <Image url="@../images/juliana.jpg"/>
                </image>
            </ImageView>
            <Label alignment="CENTER" text="Juliana" textAlignment="CENTER"
                   underline="true">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Label>
            <Label alignment="CENTER" text="Book an event with us today!"
                   textAlignment="CENTER">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
        </children>
    </VBox>

    <Label id="pageLabel" text="Owner Information" textAlignment="CENTER"
           underline="true" GridPane.columnSpan="2" GridPane.halignment="CENTER"
           GridPane.valignment="CENTER">
        <font>
            <Font name="Roboto Regular" size="36.0"/>
        </font>
    </Label>

    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
          GridPane.columnSpan="2" GridPane.halignment="CENTER"
          GridPane.rowIndex="2" GridPane.valignment="CENTER">
        <JFXButton fx:id="MenuButton" alignment="CENTER" buttonType="RAISED"
                   defaultButton="true" mnemonicParsing="false"
                   onAction="#handleMenuButton" prefHeight="40.0"
                   prefWidth="120.0" ripplerFill="#63ccff" text="Main Menu"
                   textAlignment="CENTER">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0"/>
            </HBox.margin>
            <font>
                <Font name="Roboto Regular" size="14.0"/>
            </font>
        </JFXButton>
    </HBox>
</GridPane>
